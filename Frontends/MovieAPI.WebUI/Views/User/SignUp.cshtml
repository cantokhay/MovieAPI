@model SignUpDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Register</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="/colorlib-regform-31/css/roboto-font.css">
    <link rel="stylesheet" type="text/css" href="/colorlib-regform-31/fonts/font-awesome-5/css/fontawesome-all.min.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="/colorlib-regform-31/css/style.css" />
</head>
<body class="form-v5">
    <div class="page-content">
        <div class="form-v5-content">
            <form class="form-detail" method="post">
                <h2>Register Your Account</h2>
                <div class="form-row">
                    <label for="first-name">First Name</label>
                    <input type="text" asp-for="Name" id="first-name" class="input-text" required>
                    <i class="fas fa-cloud"></i>
                </div>
                <div class="form-row">
                    <label for="last-name">Last Name</label>
                    <input type="text" asp-for="Surname" id="last-name" class="input-text" required>
                    <i class="fas fa-car"></i>
                </div>
                <div class="form-row">
                    <label for="user-name">User Name</label>
                    <input type="text" asp-for="UserName" id="user-name" class="input-text" required>
                    <i class="fas fa-user"></i>
                </div>
                <div class="form-row">
                    <label for="your-email">Your Email</label>
                    <input type="text" asp-for="Email" id="your-email" class="input-text" required>
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="form-row">
                    <label for="password">Password</label>
                    <input type="password" asp-for="Password" id="password" class="input-text" required>
                    <i class="fas fa-lock"></i>
                </div>
                <div class="form-row-last">
                    <input type="submit" name="register" class="register" value="Register">
                </div>
            </form>
        </div>
    </div>
</body>
</html>